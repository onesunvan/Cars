<?xml version='1.0' encoding='UTF-8' ?> 
<!DOCTYPE tiles-definitions PUBLIC
"-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
"http://tiles.apache.org/dtds/tiles-config_2_1.dtd">
<tiles-definitions>
    <definition name="login" 
            template="/WEB-INF/pages/tiles/template.jsp">
        <put-attribute name="title" value="welcome.title"/>
        <put-attribute name="menu"
               value="/WEB-INF/pages/tiles/language_frag.jsp" />
        <put-attribute name="content"
            value="/WEB-INF/pages/tiles/login_content.jsp"/>
    </definition>
    <definition name="welcome" extends="login">
        <put-attribute name="content"
            value="/WEB-INF/pages/tiles/welcome_content.jsp"/>
        <put-attribute name="login"
            value="/WEB-INF/pages/tiles/login_menu.jsp"/>
    </definition>
    <definition name="admin" extends="login">
        <put-attribute name="content"
            value="/WEB-INF/pages/tiles/admin_content.jsp"/>
    </definition>
    <definition name="registration" extends="login">
        <put-attribute name="content"
            value="/WEB-INF/pages/tiles/registration_content.jsp"/>
    </definition>
    <definition name="user_edit" extends="welcome">
        <put-attribute name="content"
            value="/WEB-INF/pages/tiles/user_edit_content.jsp"/>
    </definition>
    <definition name="add-content" extends="welcome">
        <put-attribute name="content"
            value="/WEB-INF/pages/tiles/add-content_content.jsp"/>
    </definition>
</tiles-definitions>